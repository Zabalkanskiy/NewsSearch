<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AstonIntensivFinal" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Theme.AstonIntensivFinal" parent="Base.Theme.AstonIntensivFinal" >
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:statusBarColor">@color/system_prymary_color</item>
        <item name="android:navigationBarColor">@color/system_prymary_color</item>

    </style>
    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/checked_on_icon</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation
        duration. -->
        <item name="windowSplashScreenBackground">@color/system_prymary_color</item>

        <!-- Use windowSplashScreenAnimatedIcon to add a drawable or an animated
             drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@raw/lotty_animation</item>
        <!-- Required for animated icons. -->
        <item name="windowSplashScreenAnimationDuration">3000</item>

        <!-- Set the theme of the Activity that directly follows your splash
        screen. This is required. -->
        <item name="postSplashScreenTheme">@style/Theme.AstonIntensivFinal</item>
    </style>


</resources>